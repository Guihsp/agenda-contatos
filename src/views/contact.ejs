<!DOCTYPE html>
<html lang="pt-BR">

<% include('includes/head') %>

  <body>

    <%- include('includes/header') %>

    <main>
      <div class="container">

        <h1 class="text-center title">Contatos</h1>
        <p class="text-center">Crie ou edite seus contatos abaixo.</p>
  
        <%- include('includes/alert') %>

        <div class="row">
          <% if(contact._id) { %>
            <h2 class="text-center title-h2">Editar Contato</h2>
            <form action="/contact/edit/<%= contact._id %>" method="POST">
          <% } else { %>
            <h2 class="text-center title-h2">Novo Contato</h2>
            <form action="/contact/register" method="POST">
          <% } %>
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            
            <div class="form-group">
              <label for="name">Nome</label>
              <input type="text" value="<%= contact.name %>" id="name" name="name" placeholder="Fulano">
            </div>

            <div class="form-group">
              <label for="lastName">Sobrenome</label>
              <input type="text" value="<%= contact.lastName %>"  id="lastName" name="lastName" placeholder="Fulano">
            </div>

            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" value="<%= contact.email %>"  id="email" name="email" placeholder="exemplo@gmail.com">
            </div>
            <div class="form-group">
              <label for="phone">Telefone</label>
              <input type="tel" value="<%= contact.phone %>"  id="phone" name="phone" placeholder="11 993123958">
            </div>
            
            <button type="submit" class="btn">Salvar</button>
          </form>
        </div>
  
        
      </div>
    </main>


    <%- include('includes/footer') %>
    <script src="/assets/js/bundle.js"></script>
  </body>

</html>